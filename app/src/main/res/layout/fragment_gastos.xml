<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Gastos.Gastos">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondogastos">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="297dp"
            android:layout_height="59dp"
            android:layout_marginTop="152dp"
            android:text="¿Qué desea hacer?"
            android:textColor="#FBF9F9"
            android:textColorLink="#F8F4F4"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnIntroducirGasto"
            android:layout_width="249dp"
            android:layout_height="48dp"
            android:layout_marginTop="56dp"
            android:text="Introducir nuevo gasto."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/btnVerGastos"
            android:layout_width="249dp"
            android:layout_height="48dp"
            android:text="Vert todos tus gastos."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnIntroducirGasto"
            app:layout_constraintVertical_bias="0.098" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>