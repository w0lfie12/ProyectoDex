            <TextView
                android:id="@+id/textView22"
                android:layout_width="132sp"
                android:layout_height="35sp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="15dp"
                android:text="Distancia(km):"
                android:textColor="#FAF5F5"
